<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="oval">

            <solid android:color="@color/darkred" />
            <size
                android:width="15dp"
                android:height="15dp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="1px"
        android:right="1px">

        <shape android:shape="oval">

            <solid android:color="@color/red" />

            <size
                android:width="5dp"
                android:height="5dp" />


        </shape>

    </item>


</layer-list>