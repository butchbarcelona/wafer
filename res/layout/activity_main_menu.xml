<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fefefe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_use"
            android:text="How to Use?"
            android:layout_weight="1"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/button_howtouse"
            android:background="@color/logo_green_light"
            android:layout_margin="10dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_contact"
            android:text="Contact Information"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/button_contact"
            android:background="@color/logo_orange_dark"
            android:layout_margin="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_deposit"
            android:text="Deposit"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/button_deposit"
            android:background="@color/logo_orange_light"
            android:layout_margin="10dp" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_claim"
            android:text="Claim"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/button_claim"
            android:background="@color/logo_green_dark"
            android:layout_margin="10dp" />
    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btn_rate"
        android:text="Rate Me!!!"
        android:scaleType="fitCenter"
        android:src="@drawable/button_rate"
        android:background="@color/logo_purple"
        android:layout_margin="10dp" />

</LinearLayout>
