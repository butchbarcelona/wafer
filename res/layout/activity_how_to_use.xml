<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.proj.wafer.HowToUseActivity"
    android:orientation="vertical"
    android:background="#fefefe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="25dp"
        android:background="@color/logo_green_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="How to Use?"
            android:id="@+id/textView42"
            android:textStyle="bold"
            android:textColor="#3e3e3e"
            android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DEPOSTITING YOUR BAGGAGE"
        android:id="@+id/textView26"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#f2d813" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Choose the Deposit Icon in the menu and choose your preferred available locker number."
        android:id="@+id/textView31"
        android:textStyle="bold"
        android:textColor="#3e3e3e"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Insert the coin in the coin slot to open the chosen vault."
        android:id="@+id/textView33"
        android:textStyle="bold"
        android:textColor="#3e3e3e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Enter a password and mobile number for the security of the vault."
        android:id="@+id/textView34"
        android:textStyle="bold"
        android:textColor="#3e3e3e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Place the baggage or luggage inside the vault and then close the door."
        android:id="@+id/textView35"
        android:textStyle="bold"
        android:textColor="#3e3e3e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CLAIMING YOUR BAGGAGE"
        android:id="@+id/textView36"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#f2d813"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Choose the Claim Icon in the Menu and choose the number of the locker you have chosen a while ago."
        android:id="@+id/textView37"
        android:textStyle="bold"
        android:textColor="#3e3e3e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Input the password you have inserted and the door of the corresponding compartment will automatically open."
        android:id="@+id/textView38"
        android:textStyle="bold"
        android:textColor="#3e3e3e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Get the baggage out of the locker and then close the door. "
        android:id="@+id/textView39"
        android:textStyle="bold"
        android:textColor="#3e3e3e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="REMINDER!"
        android:id="@+id/textView40"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If your time run outs and you can&apos;t open the vault, please contact immediately the personnel in the menu for the instruction. "
        android:id="@+id/textView41"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#3e3e3e"  />
    </LinearLayout>
</LinearLayout>
